<?xml version='1.0' encoding='utf-8'?>
<widget id="com.solti.iossoltiscan" version="1.0.9" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="BarcodeScanner">
        <param name="android-package" value="com.phonegap.plugins.barcodescanner.BarcodeScanner" />
    </feature>
    <feature name="Notification">
        <param name="android-package" value="org.apache.cordova.dialogs.Notification" />
    </feature>
    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
    </feature>
    <feature name="EmailComposer">
        <param name="android-package" value="de.appplant.cordova.emailcomposer.EmailComposer" />
    </feature>
    <name>SoltiScan</name>
    <description>
        Barcode scanner app.
    </description>
    <author email="dorian.arnaud@solti.fr">
        Dorian Arnaud
    </author>
    <content src="index.html" />
    <icon platform="android" src="res/icone.png" />
    <icon height="40" platform="ios" src="res/iconIOS40.png" width="40" />
    <icon height="76" platform="ios" src="res/iconIOS76.png" width="76" />
    <icon height="120" platform="ios" src="res/iconIOS120.png" width="120" />
    <icon height="152" platform="ios" src="res/iconIOS152.png" width="152" />
    <icon height="1024" platform="ios" src="res/iconIOS1024.png" width="1024" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="phonegap-version" value="cli-8.1.1" />
    <preference name="android-build-tool" value="gradle" />
</widget>
