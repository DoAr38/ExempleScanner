<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.webformation.scanner" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SoltiScan</name>
    <description>
        Barcode scanner app.
    </description>
    <author email="dorian.arnaud@solti.fr">
        Dorian Arnaud
    </author>
    <content src="index.html" />
<platform name="ios">
  <icon src="res/icone.png" width="180" height="180" />
  <icon src="res/icone.png" width="60" height="60" />
  <icon src="res/icone.png" width="120" height="120" />
  <icon src="res/icone.png" width="76" height="76" />
  <icon src="res/icone.png" width="152" height="152" />
  <icon src="res/icone.png" width="40" height="40" />
  <icon src="res/icone.png" width="80" height="80" />
  <icon src="res/icone.png" width="57" height="57" />
  <icon src="res/icone.png" width="114" height="114" />
  <icon src="res/icone.png" width="72" height="72" />
  <icon src="res/icone.png" width="144" height="144" />
  <icon src="res/icone.png" width="29" height="29" />
  <icon src="res/icone.png" width="58" height="58" />  
  <icon src="res/icone.png" width="50" height="50" />
  <icon src="res/icone.png" width="100" height="100" />
</platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
	<plugin name="phonegap-plugin-barcodescanner" />
	<plugin name="cordova-plugin-dialogs" />
    <plugin name="cordova-plugin-inappbrowser" />
	<plugin name="cordova-plugin-email-composer" />
 
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
	<preference name="phonegap-version" value="cli-8.1.1" />
    <preference name="android-build-tool" value="gradle" /> 
</widget>
